{
    "manifest_version": 2,
    "name": "DomNote",
    "homepage_url": "https://github.com/xilesoftware/domnote/",
    "description": "DomNote browser extension",
    "default_locale": "en",
    "permissions": [
        "<all_urls>",
        "*://*/*"
    ],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "DomNote",
        "default_icon": {
            "19": "icons/19.png",
            "38": "icons/38.png"
        }
    }
}